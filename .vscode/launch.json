      {
        "name": "Debug Project",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/emulator", // Path to your compiled executable
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
