{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug Chip8",
          "type": "cppdbg",
          "request": "launch",
          "program": "${workspaceFolder}/build/emulator", 
          "args": ["roms/default.ch8"],
          "cwd": "${workspaceFolder}",
          "stopAtEntry": false,
          "environment": [],
          "externalConsole": true,
          "MIMode": "lldb",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      }
  ]
}
